<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	    
	    <LinearLayout
	        android:id="@+id/travel"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/settings_selector"
            android:clickable="true"
            android:paddingTop="20dp"
            android:weightSum="5" >
	        
	        <TextView
	            android:id="@+id/textView_travel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/travel_cost"
			    android:layout_weight="3"
			    android:padding="10dp" />
	
	        <org.jraf.android.backport.switchwidget.Switch
	            android:id="@+id/switch1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:padding="10dp" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:drawable="@color/default_grey"
            android:background="@drawable/settings_selector"
            android:paddingTop="20dp">
	        <View
				android:id="@+id/divider_line"
	    		android:layout_width="fill_parent"
	    		android:layout_height="1dp"
	    		android:background="@color/grey"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/notif"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_selector"
            android:orientation="horizontal"
            android:clickable="true"
            android:paddingTop="20dp"
            android:weightSum="5" >
	        
	        <TextView
	            android:id="@+id/textView_notif"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/notif"
			    android:layout_weight="3"
			    android:padding="10dp" />
	
	        <org.jraf.android.backport.switchwidget.Switch
	            android:id="@+id/switch2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:padding="10dp" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:drawable="@color/default_grey"
            android:background="@drawable/settings_selector"
            android:paddingTop="20dp">
	        <View
				android:id="@+id/divider_line2"
	    		android:layout_width="fill_parent"
	    		android:layout_height="1dp"
	    		android:background="@color/grey" />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/location_btn"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_selector"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:weightSum="5"
            android:clickable="true" >
	        
	        <TextView
		        android:id="@+id/enter_location"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Home: "
		        android:textSize="15sp"
		        android:layout_weight="1"
		        android:padding="10dp" />
		    
		     <TextView
		        android:id="@+id/address"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="1 Main street, City, Province/state"
		        android:layout_weight="4" />
		     
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">
	        <View
				android:id="@+id/divider_line3"
	    		android:layout_width="fill_parent"
	    		android:layout_height="1dp"
	    		android:background="@color/grey" />
	    </LinearLayout>

	</LinearLayout>
	
    <ListView android:id="@+id/left_drawer"
        android:layout_width="220dp"
        android:paddingTop="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0dp"
        android:background="#FEFEFE"/>



</android.support.v4.widget.DrawerLayout>
